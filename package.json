{
  "name": "examples-js-web",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "author": "A.suzuki <suzu.devworks@gmail.com>",
  "description": "Workspace for studying javascript web programming.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suzu-devworks/examples-js-web.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/**/*.{js,mjs,cjs,ts,mts,cts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "simple-git-hooks": "^2.13.0",
    "typescript-eslint": "^8.37.0"
  },
  "packageManager": "pnpm@10.13.1"
}
